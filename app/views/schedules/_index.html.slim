.card
  .card-header
    .d-flex
      .h4.mr-auto Schedules
      = button_success 'New Schedule', new_payee_schedule_path(@payee), 'plus'

  .card-body.p-0
    - if @schedules.any?
      .table-responsive
        table.table.table-striped.table-bordered.table-hover
          thead.thead-light
            tr
              th = sortable 'Start Date', :start_date
              th = sortable 'End Date', :end_date
              th = sortable 'Frequency', :frequency
              th = sortable 'Autopay', :autopay
              th = sortable 'Minimum Payment', :minimum_payment
              th Actions
          tbody
            - @schedules.each do |schedule|
              tr
                td = schedule.start_date
                td = schedule.end_date
                td = schedule.frequency
                td = schedule.autopay
                td.text-right = schedule.minimum_payment
                td.text-nowrap
                  = button_primary 'Edit', edit_schedule_path(schedule), 'edit'
                  = button_danger 'Delete', schedule, 'trash',
                      data: { confirm: 'Are you sure you want to delete this record?' },
                      method: :delete
    - else
      .h5.text-center.p-3 There are currently no schedules for this payee.

